<?xml version="1.0"?>
<config>
    <modules>
        <Quafzi_CheckoutNewsletterSubscription>
            <version>1.0.0</version>
        </Quafzi_CheckoutNewsletterSubscription>
    </modules>
    <global>
        <models>
            <quafzi_checkoutnewslettersubscription>
                <class>Quafzi_CheckoutNewsletterSubscription_Model</class>
            </quafzi_checkoutnewslettersubscription>
        </models>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <handle_newsletter_subscription>
                        <class>quafzi_checkoutnewslettersubscription/observer</class>
                        <method>subscribe</method>
                    </handle_newsletter_subscription>
                </observers>
            </checkout_submit_all_after>
        </events>
    </global>
    <frontend>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <add_subscription_checkbox_to_checkout>
                        <class>quafzi_checkoutnewslettersubscription/observer</class>
                        <method>addCheckbox</method>
                    </add_subscription_checkbox_to_checkout>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
</config>
